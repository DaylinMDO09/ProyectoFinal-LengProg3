@model List<ProyectoFinal_LP3__Daylin_.Models.MotivoViewModel>

<h1>Listado de motivos</h1>

@if (TempData["Mensaje"] != null)
{
	<div class="alert alert-success">@TempData["Mensaje"]</div>
}

<div class="row">
	<div class="col-30">
		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<th>ID</th>
					<th>Descripción del motivo</th>
				</tr>
			</thead>
			<tbody>
				@{
					foreach(var m in Model)
					{
						<tr>
						<td>@m.idMotivo</td>
						<td>@m.descripcionMotivo</td>
						<td>
						<a asp-action="Editar" asp-route-idm="@m.idMotivo" class="btn btn-secondary">Editar motivo</a>
						<a asp-action="Eliminar" asp-route-idm="@m.idMotivo" class="btn btn-danger">Eliminar motivo</a>
						</td>
						</tr>
					}
				}
			</tbody>
		</table>
		<a href="/Motivos/Index" class="btn btn-link">Volver</a>
	</div>
</div>
