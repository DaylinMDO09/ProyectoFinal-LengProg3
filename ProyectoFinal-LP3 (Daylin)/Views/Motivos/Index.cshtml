@model MotivoViewModel;

<h1>Inscripcion de motivos</h1>

@if (TempData["Mensaje"] != null)
{
	<div class="alert alert-success">@TempData["Mensaje"]</div>
}

<form asp-action="Registrar" asp-controller="Motivos" method="post">
	<div>
		<label asp-for="descripcionMotivo"></label>
		<input asp-for="descripcionMotivo" class="form-control" />
		<span asp-validation-for="descripcionMotivo" class="text-danger"></span>
	</div>

	<br />
	<div>
		<button class="btn btn-primary" type="submit">Guardar motivo</button>
		<a href="/Motivos/Lista" class="btn btn-secondary">Listado de motivos</a>
	</div>
</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}